<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/ic_mic_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/originalMicColor" />
            <size
                android:width="100dp"
                android:height="100dp" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape
            android:shape="oval">
            <solid android:color="@color/shadowColor" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <bitmap
            android:src="@drawable/ic_mic"
            android:gravity="center" />
    </item>
</layer-list>
